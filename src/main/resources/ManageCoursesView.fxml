<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="650.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group1.ui.ManageCoursesController">
   <children>
      <Label text="Course Management">
         <font><Font name="System Bold" size="20.0" /></font>
      </Label>
      
      <TitledPane animated="false" text="Add/Edit Base Courses">
         <content>
            <VBox spacing="10.0">
               <children>
                  <GridPane hgap="10.0" vgap="5.0">
                     <children>
                        <Label text="Course Code:" />
                        <TextField fx:id="courseCodeField" promptText="e.g., CS101" GridPane.columnIndex="1" />
                        <Label text="Course Name:" GridPane.rowIndex="1" />
                        <TextField fx:id="courseNameField" prefWidth="300.0" promptText="e.g., Introduction to Programming" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Credits:" GridPane.rowIndex="2" />
                        <TextField fx:id="creditsField" promptText="e.g., 3" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <HBox spacing="10.0">
                      <Button onAction="#handleSaveCourse" text="Save Course" />
                      <Button onAction="#handleClearCourseForm" text="Clear Form" />
                      <Button onAction="#handleDeleteCourse" text="Delete Selected Course" />
                  </HBox>
                  <TableView fx:id="courseTableView" prefHeight="150.0">
                     <columns>
                        <TableColumn fx:id="courseCodeCol" prefWidth="150.0" text="Code" />
                        <TableColumn fx:id="courseNameCol" prefWidth="350.0" text="Name" />
                        <TableColumn fx:id="creditsCol" prefWidth="100.0" text="Credits" />
                     </columns>
                  </TableView>
               </children>
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            </VBox>
         </content>
      </TitledPane>
      
      <TitledPane animated="false" text="Create/Edit Course Sections">
         <content>
            <VBox spacing="10.0">
                <children>
                    <GridPane hgap="10.0" vgap="5.0">
                        <children>
                            <Label text="Course:" />
                            <ComboBox fx:id="sectionCourseComboBox" prefWidth="350.0" GridPane.columnIndex="1" />
                            <Label text="Academic Period:" GridPane.rowIndex="1" />
                            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <children>
                                    <ComboBox fx:id="sectionPeriodComboBox" prefWidth="300.0" />
                                    <Button onAction="#openManagePeriodsWindow" text="+" />
                                </children>
                            </HBox>
                            <Label text="Section Name:" GridPane.rowIndex="2" />
                            <TextField fx:id="sectionNameField" promptText="e.g., Section A" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        </children>
                    </GridPane>
                    <HBox spacing="10.0">
                        <Button onAction="#handleSaveSection" text="Save Section" />
                        <Button onAction="#handleClearSectionForm" text="Clear Form" />
                    </HBox>
                    <Label text="My Course Sections:" />
                    <TableView fx:id="sectionTableView" prefHeight="150.0">
                        <columns>
                            <TableColumn fx:id="sectionCourseCol" prefWidth="300.0" text="Course" />
                            <TableColumn fx:id="sectionNameCol" prefWidth="150.0" text="Section" />
                            <TableColumn fx:id="sectionPeriodCol" prefWidth="250.0" text="Period" />
                        </columns>
                    </TableView>
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <Button onAction="#handleDeleteSection" text="Delete Selected Section" />
                        <Button onAction="#handleManageRoster" text="Manage Roster for Selected Section" />
                    </HBox>
                </children>
                <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            </VBox>
         </content>
      </TitledPane>
       <Label fx:id="messageLabel" />
   </children>
   <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
</VBox>