<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group1.ui.MarkAttendanceController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Mark Attendance">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <Label text="Course Section:" />
                  <ComboBox fx:id="courseSectionComboBox" prefWidth="400.0" promptText="Select a Course Section" GridPane.columnIndex="1" />
                  <Label text="Date:" GridPane.rowIndex="1" />
                  <DatePicker fx:id="sessionDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Start Time:" GridPane.rowIndex="2" />
                  <TextField fx:id="startTimeField" promptText="HH:MM (24hr)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="End Time:" GridPane.rowIndex="3" />
                  <TextField fx:id="endTimeField" promptText="HH:MM (24hr)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Topic:" GridPane.rowIndex="4" />
                  <TextField fx:id="topicField" promptText="Topic Covered" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
            </GridPane>
             <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button onAction="#handleStartSession" text="Start Session &amp; Load Students" />
                  <Label fx:id="messageLabel" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <TableView fx:id="attendanceTableView" disable="true" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="regNumberColumn" prefWidth="150.0" text="Registration Number" />
            <TableColumn fx:id="studentNameColumn" prefWidth="350.0" text="Student Name" />
            <TableColumn fx:id="statusColumn" prefWidth="200.0" text="Status" />
         </columns>
      </TableView>
   </center>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="saveButton" disable="true" onAction="#handleSaveAttendance" text="Save Attendance">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </bottom>
</BorderPane>