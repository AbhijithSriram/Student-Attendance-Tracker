<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group1.ui.LoginController">
   <children>
      <Label text="Teacher Login">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="employeeIdField" maxWidth="200.0" promptText="Employee ID" />
      <PasswordField fx:id="passwordField" maxWidth="200.0" promptText="Password" />
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" text="Login" />
      <Hyperlink onAction="#openRegisterWindow" text="New user? Register here." />
      <Label fx:id="messageLabel" textFill="RED" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>