<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group1.ui.ManageAcademicPeriodsController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Academic Period Management">
               <font><Font name="System Bold" size="20.0" /></font>
            </Label>
            <GridPane hgap="10.0" vgap="5.0">
               <children>
                  <Label text="Academic Year:" />
                  <TextField fx:id="yearField" promptText="e.g., 2025-2026" GridPane.columnIndex="1" />
                  <Label text="Semester:" GridPane.rowIndex="1" />
                  <TextField fx:id="semesterField" promptText="e.g., Fall" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button onAction="#handleSavePeriod" text="Save Period" />
                  <Button onAction="#handleDeletePeriod" text="Delete Selected" />
                  <Button onAction="#handleClearForm" text="Clear Form" />
               </children>
            </HBox>
            <Label fx:id="messageLabel" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <TableView fx:id="periodTableView" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="yearColumn" prefWidth="250.0" text="Academic Year" />
          <TableColumn fx:id="semesterColumn" prefWidth="230.0" text="Semester" />
        </columns>
      </TableView>
   </center>
</BorderPane>