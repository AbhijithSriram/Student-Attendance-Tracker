<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group1.ui.ManageSessionsController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Manage and Edit Attendance">
               <font><Font name="System Bold" size="18.0" /></font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Course Section:" />
                  <ComboBox fx:id="courseSectionComboBox" prefWidth="400.0" promptText="Select a course to view sessions" />
               </children>
            </HBox>
         </children>
         <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
      </VBox>
   </top>
   <left>
      <VBox prefWidth="250.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Class Sessions:" />
            <ListView fx:id="sessionsListView" VBox.vgrow="ALWAYS" />
         </children>
         <padding><Insets left="10.0" bottom="10.0" /></padding>
      </VBox>
   </left>
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Attendance for Selected Session:" />
            <TableView fx:id="attendanceTableView" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="regNumberColumn" prefWidth="150.0" text="Reg. Number" />
                  <TableColumn fx:id="studentNameColumn" prefWidth="250.0" text="Student Name" />
                  <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
               </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
               <children>
                   <Button onAction="#handleSaveChanges" text="Save Changes" />
               </children>
            </HBox>
             <Label fx:id="messageLabel" />
         </children>
         <padding><Insets right="10.0" bottom="10.0" /></padding>
      </VBox>
   </center>
</BorderPane>